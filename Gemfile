source 'https://rubygems.org'
ruby '2.0.0'

# Main frameworks
gem 'rails', '4.0.0'
gem 'rails-api'
gem 'biceps'

gem 'rack-timeout'
gem 'rack-cors', require: 'rack/cors'
gem 'bcrypt-ruby'

# Database
gem 'pg'

# Data rendering
gem 'active_model_serializers'

# App server and process spawner
gem 'unicorn'
gem 'dotenv-rails'

# Assets
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'


group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
end

group :production do
  gem 'rails_12factor'
end
